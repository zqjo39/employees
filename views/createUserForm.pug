extends layout

block content
    form(action = '/add' method = 'post')
        label(for = 'first_name') First Name:
        input(id = 'first_name' name = 'first_name' type = 'text')

        label(for = 'last_name') Last Name:
        input(id = 'last_name' name = 'last_name' type = 'text')

        label(for = 'job_title') Job Title:
        input(id = 'job_title' name = 'job_title')
            each title in jobtitles
                option(value=title) #{title}

        div.address
            div.streetline
                div.streetline1
                    label(for = 'address_one') Address One:
                    input(id = 'address_one' name = 'address_one' type = 'text')

                div.streetline2
                    label(for = 'address_two') Address Two:
                    input(id = 'address_two' name = 'address_two' type = 'text')
            div.territory
                div.city
                    label(for = 'city') City:
                    input(id = 'city' name = 'city' type = 'text')

                div.state
                    label(for = 'state') State:
                    input(id = 'state' name = 'state')
                        each state in stateslist
                            option(value=state) #{state}

                div.zip
                    label(for = 'zip') Address One:
                    input(id = 'zip' name = 'zip' type = 'number')

        div.personal-info-row
            div.phone
                label(for = 'phone_number') Phone Number:
                input(id = 'phone_number' name = 'phone_number' type = 'number')

            div.year
                label(for = 'yearhired') Year Hired:
                input(id = 'yearhired' name = 'yearhired' type = 'number')

        button(type='submit') Submit